<h1>Welcome</h1>
<h2>Register</h2>
<% if @errors %>
	<% @errors.each do |error| %>
		<p><%= error %></p>
	<% end %>
<% end %>
<%= simple_form_for @user do |f| %>
	<%= f.input :name %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<%= f.button :submit, 'Register' %>
<% end %>
