<%= content_for :title do %>
	<title>Users</title>
<% end %>

<%= link_to 'My Profile', professional_profile_index_path %>
<%= link_to 'Logout', logout_path %>

<h2>Users you may want to connect with</h2>
<% if @users %>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.name, '/users/'+ user.id.to_s %></td>
			<td><%= link_to 'Connect', invite_create_path(user) %><!-- Link to connect --></td>
		</tr>
	<% end %>
	</tbody>
</table>
<% end %>